@model MvcMovie.Models.MovieGenreViewModel


<h2>Index</h2>

<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table id="table_id" class="table display">
    <thead>
        <tr>
            <th>
                <a asp-action="Index">Title</a>
            </th>
            <th>
                <a asp-action="Index">Release Date</a>
            </th>
            <th>
                <a asp-action="Index">Genre</a>
            </th>
            <th>
                <a asp-action="Index">Price</a>
            </th>
            <th>
                Rating
            </th>
            <th>
                Quantity
            </th>
            <th>
                Rent
            </th>
            <th>
                Available in
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @item.ReleaseDate.ToString("dd-MM-yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @item.Price.ToString("F2")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                @if (item.Quantity <= 0)
                {
                    <td>
                        Missing
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NearDate)
                    </td>
                }
                else
                {
                    <td>
                        <a href="javascript:void(0);" class="anchorRent" data-id="@item.Id"> Rent </a>
                    </td>
                    <td>
                        Available now
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<div id='myModal' class='modal'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/Views/Movies/MoviesIndex.js"></script>
}